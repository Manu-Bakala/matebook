{% extends 'layouts/base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>
            <img src="{{ app.user.gravatarUrl(150) }}" alt="Avatar de {{ app.user.fullName }}" class="rounded-circle">
            
            <p class="lead mt-5">{{ app.user.email }}</p>
            <h2>{{ app.user.fullName }}</h2>
            <p><small>
                Account created on {{ app.user.createdAt|date('d/m/y') }}
            </small></p>

            <p>
                <a href="{{ path('app_account_edit') }}">Edit Account</a> | <a href="#">Change Password</a>
            </p>
        </div>
    </div>
{% endblock %}
