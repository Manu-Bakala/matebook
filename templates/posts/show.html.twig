{% extends 'layouts/base.html.twig' %}

{% block title %}Metabook - {{ post.title }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto">
            <article class="post bg-white rounded shadow">
                <div class="mw-100 overflow-hidden rounded-top">
                    <img src="{{ (post.imageName ? vich_uploader_asset(post) : asset('build/images/no_image.jpg')) 
                    | imagine_filter('squared_thumbnail_medium') }}" class="w-100" alt="{{ post.title }}" />
                </div>
                <div class="p-3">
                    <h1 class="h5  text-secondary text-break">{{ post.title|u.truncate(30,'...') }}</h1>
                    <p class="text-muted">
                        <small>
                            Submitted 
                            <time datetime="{{ post.createdAt|date('d-m-Y H:i:s') }}">{{ post.createdAt|ago }}</time><br> 
                            by {{ post.user.fullName }}
                        </small>
                    </p>

                    {% if is_granted('POST_MANAGE', post) %}
                        <div class="pt-2">
                            <a href="{{ path('app_post_edit', {id: post.id}) }}" class="btn btn-light">
                                Modifier
                            </a>
                            <a href="#" 
                            onclick="event.preventDefault();alert_delete_post()"
                            class="btn btn-light">
                                Supprimer
                            </a>

                            <form id="js-post-delete-form" action="{{ path('app_post_delete', {id: post.id}) }}" method="post" style="display:none">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token('post_delete_' ~ post.id) }}">
                                <input type="hidden" name="_method" value="DELETE">
                            </form>
                        </div>
                    {% endif %}
                </div>
            </article>
        </div>
    </div>
{% endblock %}