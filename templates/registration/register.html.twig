{% extends 'layouts/base.html.twig' %}

{% block title %}MateBook - Inscription{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 col-sm-12 mx-auto border rounded mt-5 pr-5 pl-5 pb-4 shadow-lg bg-form">
            <h1 class="my-5 text-center">
                <img src="{{ asset('build/images/logo_matebook.png') }}" width="50px" height="50px">
                MateBook<br>
                <span class="sub-title">Créer un compte</span>
            </h1>

            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="col-lg-6 col-md-12">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe'
                        }) }}
                    </div>
                </div>                
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary btn-lg btn-block" formnovalidate>S'enregister</button>

                <p class="text-center text-muted mt-5">Vous avez déjà un compte? <a href="{{ path('app_login') }}">Connectez vous ici</a></p>

            {{ form_end(registrationForm) }}
        </div>
    </div>
    
{% endblock %}
